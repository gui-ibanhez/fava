<p id="notice"><%= notice %></p>
<h1>Informações da Encomenda</h1>
<p>
  <strong>Cliente:</strong>
  <%= link_to customer_path(@request.customer) do %>
    <%= @request.customer.name %>
  <% end %>
</p>

<p>
  <strong>Delivery:</strong>
  <%= @request.delivery %>
</p>

<p class='pre-line neg-margin15'>
  <strong>Itens:</strong>
  <%= @request.items %>
</p>

<p>
  <strong>Data de entrega:</strong>
  <%= @request.delivery_date %>
</p>

<%= link_to 'Editar', edit_request_path(@request), class: "blue-grey btn waves-effect waves-light" %> 
<%= link_to 'Voltar', requests_path, class: "blue-grey btn waves-effect waves-light" %>
