<p id="notice"><%= notice %></p>

<h1>Expense Kinds</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expense_kinds.each do |expense_kind| %>
      <tr>
        <td><%= expense_kind.name %></td>
        <td><%= link_to 'Show', expense_kind %></td>
        <td><%= link_to 'Edit', edit_expense_kind_path(expense_kind) %></td>
        <td><%= link_to 'Destroy', expense_kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

