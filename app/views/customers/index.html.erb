<p id="notice"><%= notice %></p>

<h1>Clientes</h1>
<%= link_to '<i class="material-icons left">person</i>Novo cliente'.html_safe, 
            new_customer_path, 
            class: "blue-grey btn waves-effect waves-light" %>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th>E-mail</th>
      <th>Endereço</th>
      <th>Número</th>
      <th>Bairro</th>
      <th>Cep</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.phone1 %></td>
        <td><%= customer.email %></td>
        <td><%= customer.address %></td>
        <td><%= customer.number %></td>
        <td><%= customer.neighborhood %></td>
        <td><%= customer.cep %></td>
        <td><%= link_to 'Exibir', customer %></td>
        <td><%= link_to 'Editar', edit_customer_path(customer) %></td>
        <td><%= link_to 'Apagar', customer, method: :delete, data: { confirm: 'Tem certeza que deseja destruir o registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
