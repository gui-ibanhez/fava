<p id="notice"><%= notice %></p>

<h1>Origens de Venda</h1>

<br>
<%= link_to '<i class="material-icons left">money</i>Nova Origem'.html_safe, 
            new_origin_path, 
            class: "blue-grey btn waves-effect waves-light" %>

<table>
  <thead>
    <tr>
      <th>Origem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @origins.each do |origin| %>
      <tr>
        <td><%= origin.name %></td>
        <td><%= link_to 'Mostrar', origin %></td>
        <td><%= link_to 'Editar', edit_origin_path(origin) %></td>
        <td><%= link_to 'Apagar', origin, method: :delete, data: { confirm: 'Tem certeza de que deseja apagar o registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>