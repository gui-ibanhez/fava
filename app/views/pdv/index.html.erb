<h1>Fava de Baunilha - PDV  </h1>
<%= form_with url: "/pdv/get_items", remote: true, method: 'get' do |form| %>
  <div class='col s6 padz'>
    <div class="input_field">
      <%= form.label :customer, 'Cliente'%>
      <%= form.select :customer, 
    options_for_select(Customer.select(:id, :name).map { |e| [e.name, e.id]}) %>
    </div>
  </div>
  <div class='row'>
    <div class='col s6 padz'>
      <div class="input_field">
        <%= form.label :pdv_product, 'Produto'%>
        <%= form.select :product_id, 
      options_for_select(Product.select(:nome, :id).map { |e| [e.nome, e.id]}) %>
      </div>
    </div>
    <div class='col s6 center' id='pdv_button'>
      <div class="input_field inline">
        <%= form.button '<i class="material-icons left">add_shopping_cart</i>Adicionar'.html_safe, class: "blue-grey btn waves-effect waves-light pulse" %>
      </div>
    </div>
  </div>
<% end %>
<table>
  <thead>
    <tr>
      <th>Cod.</th>
      <th>Produto</th>
      <th>Quantidade</th>
      <th>Valor</th>
      <th>Subtotal</th>
      <th>Apagar</th>
    </tr>
  </thead>
  <tbody id="pdv_product_list">
  </tbody>
<tfoot>
<tr>
<td colspan="4"><h5>Total</h5></td>
<td id="pdv_total"><h5>0</h5></td>
<td></td>
</tr>
<tr>
<td colspan="2"><h5>Pagamento</h4></td>
<td colspan="2"><%= select_tag "payment", options_for_select(PaymentMethod.all.map { |e| [e.name, e.id] })%></td>
<td id="pdv_pagamento"><span><input type="number" value="0"></span></td>
<td></td>
</tr>
<tr>
<td colspan="4"><h5>Troco</h5></td>
<td id="pdv_troco"><h5>0</h5></td>
<td></td>
</tr>
</tfoot>
</table>
