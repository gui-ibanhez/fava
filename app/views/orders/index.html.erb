<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Value</th>
      <th>Value</th>
      <th>Discount</th>
      <th>Discount</th>
      <th>Payment</th>
      <th>Origin</th>
      <th>Request ahead</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer_id %></td>
        <td><%= order.value %></td>
        <td><%= order.value %></td>
        <td><%= order.discount %></td>
        <td><%= order.discount %></td>
        <td><%= order.payment %></td>
        <td><%= order.origin %></td>
        <td><%= order.request_ahead %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

